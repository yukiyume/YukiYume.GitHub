<configuration>
  
  <configSections>
    <sectionGroup name="NUnit">
      <section name="TestCaseBuilder" type="System.Configuration.NameValueSectionHandler"/>
      <section name="TestRunner" type="System.Configuration.NameValueSectionHandler"/>
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="YukiYume.GitHub" type="YukiYume.GitHub.Configuration.GitHubConfigurationSection, YukiYume.GitHub" />
  </configSections>

  <NUnit>
    <TestCaseBuilder>
      <add key="OldStyleTestCases" value="false" />
    </TestCaseBuilder>
    <TestRunner>
      <add key="ApartmentState" value="MTA" />
      <add key="ThreadPriority" value="Normal" />
      <add key="DefaultLogThreshold" value="Debug" />
    </TestRunner>
  </NUnit>

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>

  <YukiYume.GitHub>
    <authentication userName="" apiToken="" />
    <client apiUrlFormat="http{0}://github.com/api/v2/{1}/{2}" networkUrlFormat="http://github.com/{0}" poolSize="16"/>
  </YukiYume.GitHub>

</configuration>